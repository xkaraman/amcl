<launch>
  <node pkg="nodelet" type="nodelet" name="depth_image_manager"  args="manager"/>
  <node pkg="nodelet" type="nodelet" name="point_cloud_xyzrgb"
        args="load depth_image_proc/point_cloud_xyzrgb depth_image_manager">
    <!-- Input -->
    <remap from="rgb/camera_info" to="/camera/rgb/camera_info"/>
    <remap from="rgb/image_rect_color" to="/camera/rgb/image_raw"/>
    <remap from="depth_registered/image_rect" to="/camera/depth/image_raw"/>
    <!-- Output -->
    <remap from="depth_registered/points" to="/rgb/points"/>
    </node>
</launch>
